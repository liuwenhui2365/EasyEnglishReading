<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.liu.autotanslate" >

    <uses-permission android:name="android.permission.INTERNET" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Classify"
            android:label="@string/title_activity_classify"
            android:launchMode="singleTask">
        </activity>
        <activity
            android:name=".Message"
            android:label="@string/message">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.liu.autotanslate.Refresh" />
        </activity>
        <activity
            android:name=".Refresh"
            android:label="@string/title_activity_refresh"
            android:parentActivityName=".Classify" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.liu.autotanslate.Classify" />
        </activity>
        <activity
            android:name=".WordClassify"
            android:label="@string/title_activity_word_classify"
            android:parentActivityName=".Classify">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.liu.autotanslate.Classify" />
        </activity>
        <activity
            android:name=".MenuTest"
            android:label="@string/title_activity_menu_test" >
        </activity>
        <activity
            android:name=".WordMeaning"
            android:label="@string/title_activity_word_meaning"
            android:parentActivityName=".WordClassify" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.liu.autotanslate.WordClassify" />
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
        </activity>
    </application>

</manifest>
